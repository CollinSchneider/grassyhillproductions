
<div class="row">
  <div class="col s6 offset-s3">
    <%= form_for GreetingCard.new do |f| %>
      <div class="input-field">
        <%= f.label "Code" %>
        <%= f.text_field :code %>
      </div>
      <div class="input-field">
        <%= f.label "Front Image" %>
        <%= f.file_field :front_image %>
      </div>
      <div class="input-field">
        <%= f.label "Inside Image" %>
        <%= f.file_field :inside_image %>
      </div>
      <div class="input-field">
        <%= f.label "Category" %>
        <%= f.select :category, ['Birthday', 'Sympathy', 'Thank You', 'Love', 'Congratulations', 'Anniversary']%>
      </div>
      <%= f.submit "Create" %>
    <% end %>
  </div>
</div>

<h2 class="center-align">Greeting Cards</h2>

<div class="row center-align">
  <div class="col s4 border">
    <a href="/cards/birthday">
      <h4>Birthday</h4>
      <%= image_tag @birthday_picture.front_image.url(:medium), :class => 'responsive-img' %>
    </a>
  </div>
  <div class="col s4 ">
    <a href="/cards/sympathy"><h4>Sympathy</h4></a>
  </div>
  <div class="col s4 ">
    <a href="/cards/thank_you"><h4>Thank You</h4></a>
  </div>
</div>
<div class="row center-align">
  <div class="col s4 ">
    <a href="/cards/love"><h4>Love</h4></a>
  </div>
  <div class="col s4 ">
    <a href="/cards/congratulations"><h4>Congratulations</h4></a>
  </div>
  <div class="col s4 ">
    <a href="/cards/anniversary"><h4>Anniversary</h4></a>
  </div>
</div>
