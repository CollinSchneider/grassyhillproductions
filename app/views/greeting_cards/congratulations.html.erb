<div class="row">
  <div class="col s6 offset-s3">
    <%= form_for GreetingCard.new do |f| %>
      <div class="input-field">
        <%= f.label "Code" %>
        <%= f.text_field :code %>
      </div>
      <div class="input-field">
        <%= f.label "Front Image" %>
        <%= f.file_field :front_image %>
      </div>
      <div class="input-field">
        <%= f.label "Inside Image" %>
        <%= f.file_field :inside_image %>
      </div>
      <%= f.hidden_field :category, :value => 'Congratulations' %>
      <%= f.submit "Create" %>
    <% end %>
  </div>
</div>

<div class="center-align">

  <h2 class="trochut">Congrats</h2>

  <%= render partial: "card_partial" %>

</div>

<script>
  $(document).ready(function(){
    $('select').material_select();
  })
</script>
