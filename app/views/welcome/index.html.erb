<style media="screen">
  .border-hover {
    border: 1px solid rgb(213, 213, 213);
    border-radius: 15px;
    transition: .3s;
    margin-top: 15px;
  }
  .border-hover:hover {
    border: 1px solid black;
    background: rgb(240, 240, 240);
  }
  .border-hover .title {
    transition: .3s;
    font-size: 50px;
  }
  .border-hover:hover .title {
    font-size: 55px;
  }
</style>
<script>
  $('.border-hover').mouseover(function(){
    console.log('hover');
    $(this).find('.title').css({
      color: 'rgb(201, 140, 19)'
    })
  })
  $('.border-hover').mouseleave(function(){
    console.log('hover');
    $(this).find('.title').css({
      color: 'black'
    })
  })
</script>
